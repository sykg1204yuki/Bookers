<div class="main-form">
  <h3><strong>Editing Book</strong></h3>

<!--ここからバリデーションのエラーメッセージ-->
  <% if @book.errors.any? %>
  <div class="errors-message">
    <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
  </div>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
<!-- ここからRailsにてアクションと連携 (form_with)-->
  <%= form_with model:@book,local:true do |f| %>
  <section class="form">
    <p>title</p>
    <%= f.text_field :title %>
  </section>
  <section class="form">
    <p>Body</p>
    <%= f.text_area :body %>
  </section>
  <div class="form form-submit">
    <%= f.submit 'Update Book' %>
  </div>
  <div class="edit-link link">
  <%= link_to 'Show', book_path(@book.id) %>
    |
  <%= link_to 'Back', books_path %>
  </div>

  <% end %>
</div>